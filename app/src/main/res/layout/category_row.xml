<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="3dp"
		android:elevation="5dp"
		app:cardBackgroundColor="@color/colorWhile"
		app:cardUseCompatPadding="true">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
		<CheckBox
				android:layout_width="40dp"
				android:textSize="24sp"
				android:button="@drawable/chackbox_style"
				android:layout_height="40dp"
				android:checked="true"
				android:enabled="false"
				android:layout_marginTop="18dp"
				android:layout_marginStart="16dp"
				android:id="@+id/category_done_row"
				android:layout_toStartOf="@+id/layout"
				android:layout_toLeftOf="@+id/layout"
				/>
		<LinearLayout
				android:id="@+id/layout"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_margin="8dp"
				android:layout_alignParentTop="true">
			
			<com.e.myworkplace.components.CustomTextView
					android:id="@+id/category_data"
					android:layout_width="match_parent"
					android:text="13:00 12.07.2019"
					app:textFontStyle="reguler"
					android:gravity="right"
					android:textColor="@color/colorBlueDark"
					android:textSize="16sp"
					android:padding="@dimen/cardview_default_radius"
					android:layout_height="wrap_content"/>
			
			<com.e.myworkplace.components.CustomTextView
					android:id="@+id/category_title"
					android:layout_width="match_parent"
					android:text="Bahodir"
					android:gravity="center"
					android:textColor="@color/colorBlueDarkTitle"
					android:textSize="20sp"
					app:textFontStyle="bold"
					android:padding="@dimen/cardview_default_radius"
					android:layout_height="wrap_content"/>
			
			<com.e.myworkplace.components.CustomTextView
					android:id="@+id/category_text"
					android:padding="@dimen/cardview_default_radius"
					app:textFontStyle="reguler"
					android:layout_width="match_parent"
					android:text="@string/common_google_play_services_enable_text"
					android:textColor="@color/colorBlack"
					android:textSize="17sp"
					android:layout_height="wrap_content"/>
		</LinearLayout>
		
	</LinearLayout>
</androidx.cardview.widget.CardView>